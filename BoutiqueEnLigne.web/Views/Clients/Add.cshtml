@{
}
 @model BoutiqueEnLigne.web.Models.AddClientViewModel

<h1>Add a client</h1>

<form method="post">
<div class="mt-3">
    <label class="form-label">Id</label>
    <input type="number" name="id" class="form-control" asp-for="Id"/>

</div>

<div class="mt-3">
    <label class="form-label">Nom</label>
    <input type="text" name="name" class="form-control" asp-for="Nom"/>

</div>

<div class="mt-3">
    <label class="form-label">Adresse</label>
    <input type="text" name="adresse" class="form-control" asp-for="Adresse"/>

</div>

<div class="mt-3">
    <label class="form-label">Email</label>
    <input type="email" name="email" class="form-control" asp-for="Email"/>

</div>

<div class="mt-3">
    <label class="form-label">Login</label>
    <input type="text" name="login" class="form-control" asp-for="Login"/>

</div>

<div class="mt-3">
    <label class="form-label">Password</label>
    <input type="password" name="password" class="form-control" asp-for="Password"/>

</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</form>