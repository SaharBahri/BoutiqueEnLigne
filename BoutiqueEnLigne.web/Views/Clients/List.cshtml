@{
}

@model List<BoutiqueEnLigne.web.Models.Entities.Client>
<h1>Clients : </h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Adresse</th>
            <th>Email</th>
            <th>Login</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.Id</td>
                <td>@client.Nom</td>
                <td>@client.Adresse</td>
                <td>@client.Email</td>
                <td>@client.Login</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Client"
                    asp-action="Edit" asp-route-id="@Client.Id">  Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>